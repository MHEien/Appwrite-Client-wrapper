{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist/declarations" // Updated declarationDir
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "index.ts", "dist/**/*.ts", "dist/**/*.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}